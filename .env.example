# Server
PORT=3000
NODE_ENV=production

# Domain (optional)
APP_BASE_URL=https://mcp.avirupahomoeo.com

# Supabase
SUPABASE_URL=https://your-supabase-url.supabase.co
SUPABASE_KEY=your-service-role-or-api-key

# Postgres (if you want direct Postgres connection)
PGHOST=localhost
PGUSER=postgres
PGPASSWORD=postgres_password
PGDATABASE=postgres
PGPORT=5432

# Redis (internal URL or redis://user:pass@host:6379/0)
REDIS_URL=redis://default:password@redis:6379/0

# WooCommerce REST API
WOOCONSUMERKEY=ck_xxx
WOOCONSUMERSECRET=cs_xxx
WOOCOMERCE_BASE=https://your-woocommerce-site.com

# Zoho (you will need OAuth details)
ZOHO_CLIENT_ID=xxx
ZOHO_CLIENT_SECRET=xxx
ZOHO_REFRESH_TOKEN=xxx
ZOHO_ACCESS_TOKEN=xxx
ZOHO_BASE=https://www.zohoapis.com

# n8n webhook (where MCP will POST data / trigger flows)
N8N_WEBHOOK_URL=https://n8n.avirupahomoeo.com/webhook/yourwebhookpath

# Twilio (if using Twilio WhatsApp)
TWILIO_ACCOUNT_SID=ACxxxxx
TWILIO_AUTH_TOKEN=your_auth
TWILIO_WHATSAPP_NUMBER=whatsapp:+1415xxxxxxx

# Optional OpenAI / model provider
OPENAI_API_KEY=sk-xxx
OPENAI_PROVIDER=openai | gemini | groq  # your choice
